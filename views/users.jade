doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Shop Homepage - Start Bootstrap Template
    // Bootstrap Core CSS
    link(href='../public/css/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='../public/css/shop-homepage.css', rel='stylesheet')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Start Bootstrap
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#') About
              li
                a(href='/twit') Search Users
              li
                a(href='/newtwit') New Twit
            li
              a(href='#') Contact

        // /.navbar-collapse
      // /.container
    // Page Content
    .container
      .row
        nav.navbar.navbar-default
          .nav.nav-justified.navbar-nav
            form.navbar-form.navbar-search(role='search',action='/twit',method='post')
              .input-group
                input.form-control(type='text',name='username')
                .input-group-btn
                  button.btn.btn-primary.btn-search(type='submit')
                    | Search User Name
    .container
      .row
        .col-md-9
          .row
            each user, i in users
              .col-sm-4.col-lg-4.col-md-4
                .thumbnail
                  a(href='https://twitter.com/'+`${user.screen_name}`)
                    img(src=`${user.profile_image_url.replace(/_normal/gi,"")}`, alt='')
                  .caption
                    h4.pull-right name : #{user.name}
                    h4.pull-right screen name : #{user.screen_name}
                  .ratings
                    p.pull-right #{user.followers_count} followers
                    p
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
    // /.container
    .container
      hr
      // Footer
      footer
        .row
          .col-lg-12
            p Copyright Â© Your Website 2014
    // /.container

    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='../public/js/bootstrap.min.js')
